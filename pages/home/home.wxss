page{
  width: 100%;
  /* height: 100%; */
}
.wrap{
  width: 100%;
  height: 100%;
  text-align: center;
}

.choice-pink {
   color: #f8bdbe; 
}

 .choice-blue {
   color: #a4f1e4;   
} 

.sele-color {
  border: 1px solid transparent;
}

.sele-color view{
  float: right;
  margin: 10px 15px 0 0 ;
  width: 20px;
  height: 20px;
   /* border: 3px solid #d1cfcf;  */
  border-radius: 5px;
}
.pink {
  background-color: #f8bdbe;
}
.blue {
  background-color: #a4f2e0;
}

.head-portrait{
  display:block;
  margin: 0 auto;
   margin-top: 15%; 
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.pink-head {
  border: 5px solid #fee4e5;
}
.blue-head {
  border: 5px solid #d8ece5; 
}

.userinfo-nickname{
  display: inline-block;
  margin: 20rpx;
}
.pink-nickname {
  color: #ffa4b2;
}
.blue-nickname {
  color: #9dcec3;
}

.input{
  margin:0 auto; 
  margin-top: 6%; 
  margin-bottom: 4%; 
  padding:0 20rpx;
  width: 560rpx;  
  height: 100rpx;
  line-height: 100rpx;  
   border-radius: 10px;
   font-size: 40rpx;
   text-align: center; 
}

.pink-input {
  border: 3px solid #fecfd0;
}
.blue-input {
  border: 3px solid #b7f0e4;
}


.up-time{
  display: inline-block;
  margin-top: 6%;
}

.time-btn{
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  /* margin-top: 8%; */
  font-size: 50rpx;
  color: #fff;
}
.pink-btn {
  background-color: #f8bdbe;
}
.blue-btn {
  background-color: #a4f2e0;
}

.work-situation{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  text-align: center;
}
.survey{
  display: block;
  margin: 0 auto;
  padding-bottom: 5%;
  width: 90%;
  /* border-bottom: 1px solid #ffd2dd; */
